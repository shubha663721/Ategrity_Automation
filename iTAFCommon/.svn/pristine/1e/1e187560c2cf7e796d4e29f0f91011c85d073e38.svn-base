	public static ResultSet establishExcelConn(String filePath,String sheetName) throws SQLException, ClassNotFoundException, Exception
	{
		
		try
		{
		Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
		c = DriverManager.getConnection("jdbc:odbc:Driver={Microsoft Excel Driver (*.xls)};DBQ="+ filePath + ";DriverID=22;READONLY=false;");
		st = c.createStatement();
		rs = st.executeQuery("Select * from ["+ sheetName +"$]");
		}
		catch(SQLException se)
		{
			log.error(se.getMessage(), se);
			log.error("Failed to connect "+ filePath+ " <-|-> LocalizeMessage " + se.getLocalizedMessage() +" <-|-> Message "+ se.getMessage() +" <-|-> Cause "+ se.getCause());
			throw new SQLException("Failed to connect "+ filePath+ " <-|-> LocalizeMessage " + se.getLocalizedMessage() +" <-|-> Message"+ se.getMessage() +" <-|-> Cause "+ se.getCause());	
		}
		catch(Exception e)
		{
			log.error(e.getMessage(), e);
			log.error("Failed to connect excel "+ filePath+ " <-|-> LocalizeMessage " + e.getLocalizedMessage() +" <-|-> Message "+ e.getMessage() +" <-|-> Cause "+ e.getCause());
			throw new Exception("Failed to connect excel "+ filePath+ " <-|-> LocalizeMessage " + e.getLocalizedMessage() +" <-|-> Message"+ e.getMessage() +" <-|-> Cause "+ e.getCause());	
		}
		
		return rs;
	}

